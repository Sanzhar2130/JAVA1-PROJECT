<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.cinema.MovieFormController">
    <padding>
        <Insets bottom="30.0" left="50.0" right="50.0" top="30.0" />
    </padding>
    <Label text="Add New Movie">
        <font>
            <Font name="System Bold" size="22.0" />
        </font>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Label>
    <VBox alignment="CENTER_LEFT" spacing="5.0">
        <Label text="Title:" style="-fx-font-weight: bold;" />
        <TextField fx:id="titleField" promptText="Enter movie title" />
    </VBox>
    <VBox alignment="CENTER_LEFT" spacing="5.0">
        <Label text="Director:" style="-fx-font-weight: bold;" />
        <TextField fx:id="directorField" promptText="Enter director's name" />
    </VBox>
    <VBox alignment="CENTER_LEFT" spacing="5.0">
        <Label text="Genre:" style="-fx-font-weight: bold;" />
        <ComboBox fx:id="genreComboBox" promptText="Select genre" maxWidth="Infinity" />
    </VBox>
    <VBox alignment="CENTER_LEFT" spacing="5.0">
        <Label text="Duration (minutes):" style="-fx-font-weight: bold;" />
        <TextField fx:id="durationField" promptText="e.g. 120" />
    </VBox>
    <VBox alignment="CENTER_LEFT" spacing="5.0">
        <Label text="Description:" style="-fx-font-weight: bold;" />
        <TextArea fx:id="descriptionArea" prefHeight="100.0" promptText="Short plot summary" wrapText="true" />
    </VBox>
    <HBox alignment="CENTER" spacing="20.0">
        <padding>
            <Insets top="10.0" />
        </padding>
        <Button text="Save" onAction="#onSaveClick" defaultButton="true" prefWidth="100.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" />
        <Button text="Cancel" onAction="#onCancelClick" cancelButton="true" prefWidth="100.0" />
    </HBox>
    <Label fx:id="statusLabel" textFill="RED" wrapText="true" />

</VBox>