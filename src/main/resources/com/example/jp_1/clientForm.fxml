<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER_LEFT" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.jp_1.ClientFormController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="New Client" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>

        <Label text="First Name:" />
        <TextField fx:id="firstNameField" maxWidth="250.0" />

        <Label text="Last Name:" />
        <TextField fx:id="lastNameField" maxWidth="250.0" />

        <Label text="Email:" />
        <TextField fx:id="emailField" maxWidth="250.0" />

        <Label text="Phone Number:" />
        <TextField fx:id="phoneField" maxWidth="250.0" />

        <HBox spacing="10.0">
            <children>
                <Button text="Save" onAction="#onSaveClick" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                <Button text="Cancel" onAction="#onCancelClick" />
            </children>
            <padding><Insets top="10.0" /></padding>
        </HBox>
    </children>
</VBox>