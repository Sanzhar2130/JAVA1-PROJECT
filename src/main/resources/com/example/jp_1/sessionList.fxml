<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.jp_1.SessionListController">
    <center>
        <TableView fx:id="sessionTable" prefHeight="400.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colMovie" prefWidth="100.0" text="Movie ID" />
                <TableColumn fx:id="colHall" prefWidth="100.0" text="Hall ID" />
                <TableColumn fx:id="colTime" prefWidth="200.0" text="Start Time" />
                <TableColumn fx:id="colPrice" prefWidth="100.0" text="Price" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>
            <children>
                <Button mnemonicParsing="false" onAction="#handleCreateSession" text="Create" />
                <Button mnemonicParsing="false" onAction="#handleSelectSession" text="Select seats" />
                <Button mnemonicParsing="false" onAction="#handleBack" text="Bact to menu" />
            </children>
        </HBox>
    </bottom>
</BorderPane>