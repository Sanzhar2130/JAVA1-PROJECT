<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.jp_1.SessionViewController">
    <top>
        <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="movieTitleLabel" text="Movie title">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Label fx:id="sessionInfoLabel" text="Hall: X | Time: XX:XX" />
            </children>
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
        </VBox>
    </top>
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER">
            <content>
                <GridPane fx:id="seatGrid" alignment="CENTER" hgap="5.0" vgap="5.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </GridPane>
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" top="10.0" />
            </padding>
            <children>
                <Label fx:id="totalPriceLabel" text="Итого: 0.0" textFill="#e40000">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <Button fx:id="buyButton" mnemonicParsing="false" onAction="#handleBuy" prefHeight="40.0" prefWidth="150.0" text="Buy tickets">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#handleBack" text="Back to sessions" />
            </children>
        </VBox>
    </bottom>
</BorderPane>